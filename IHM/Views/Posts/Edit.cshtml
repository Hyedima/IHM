@model IHM.Models.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="col-md-12">

    <div class="card card-accent-success">
        <div class="card-header">
            <i class="fa fa-align-justify"></i>Posting Article
        </div>
        <div class="card-body">
          @using (Html.BeginForm())
          {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Post an article</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        <div class="col-md-12">
                            @Html.HiddenFor(model => model.PostID)
                            @Html.HiddenFor(model => model.UserID)
                            @Html.HiddenFor(model => model.Photo)
                            @Html.HiddenFor(model => model.Verified)
                            @Html.HiddenFor(model => model.PostDate)

                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Artist, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.Artist, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Artist, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label>Category</label>
                            @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label>Artilcale</label>
                            @Html.TextAreaFor(model => model.Post1, new { @class = "form-control", rows = "10" })
                            @Html.ValidationMessageFor(model => model.Post1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Save Changes" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer"></div>
    </div>

</div>